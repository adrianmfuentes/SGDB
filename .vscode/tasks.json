{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "./testing/tests.cpp",  
                "./src/database.cpp",  
                "./src/table.cpp",
                "./src/index.cpp",    
                "-I../include",  
                "-o", 
                "test_program",  
                "-g"  
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila todos los archivos de prueba y genera el ejecutable."         
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "./test_program",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build tests",
            "detail": "Ejecuta el programa de pruebas."
        }
    ]
}
